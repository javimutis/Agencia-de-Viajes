<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

           <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/contenedorPrincipalItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagenFichaItem"
                    android:layout_width="match_parent"
                    android:layout_height="212dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:clipToOutline="true"
                    android:outlineProvider="bounds"
                    app:srcCompat="@drawable/cancun"
                    android:contentDescription="TODO"></ImageView>


                <TextView
                    android:id="@+id/nombreFichaItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Nombre del destino"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/diasFichaItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Días"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/nocheFichaItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Noches"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"></TextView>

                </LinearLayout>

                <TextView
                    android:id="@+id/valorFichaItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Valor en dolares"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/locacionFichaItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Locación destino"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/descripcionFichaItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Que incluye"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"></TextView>

                <RatingBar
                    android:id="@+id/estrellasFichaItemRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:numStars="5"
                    android:progressTint="@color/color_principal_app"
                    android:rating="2.5"
                    android:stepSize="0.5" />

                <Button
                    android:id="@+id/menufichaItem"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".5"
                    android:background="@color/light_green"
                    android:backgroundTint="@color/light_green"
                    android:text="Volver al menú"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

</layout>
