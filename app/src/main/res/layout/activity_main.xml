<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tituloApp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:background="@color/color_principal_app"
        android:gravity="center"
        android:text="Bienvenid@ a Otro Mundo"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tituloApp2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@color/color_principal_app"
        android:gravity="center"
        android:text="Tu agencia de viajes favorita"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imagenHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:adjustViewBounds="true"
        android:src="@drawable/logoavion" />

    <TextView
        android:id="@+id/preguntaAccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Que te gustarÃ­a hacer?"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <Button

        android:id="@+id/botonAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_principal_app"
        android:text="@string/boton_agregar" />


    <TextView
        android:id="@+id/espacio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/botonRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_principal_app"
        android:text="@string/boton_ficha" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Bootcamp UNAB"
        android:textColor="@color/black"
        android:textSize="12sp"></TextView><!-- Cierre del View!-->

</LinearLayout>